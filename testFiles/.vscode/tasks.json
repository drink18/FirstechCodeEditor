{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "Build file",
            "type": "shell",
            "command": "p2f ${file} && p2f ${file} -dump par",
            "problemMatcher":
            {
                "owner": "c",
                "fileLocation": ["absolute"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(.*)\\s(error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 4,
                    "message": 5
                }
            }
            
        }
    ]
}